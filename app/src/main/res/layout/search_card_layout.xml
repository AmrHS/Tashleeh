<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:id="@+id/admin_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="11dp"
    app:cardElevation = "3dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<!--    android:clickable="true"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:weightSum="10"
        android:orientation="horizontal">

        <!-- Media -->
        <ImageView
            android:id="@+id/search_card_image"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
        <!--android:src = "@drawable/car_part"-->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="141dp"
        android:weightSum="10"
        android:orientation="vertical">
        <TextView
            android:id="@+id/search_card_title"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="0dp"
            android:text="قطع غيار"
            android:textAlignment="center"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            android:textColor="@color/dark_blue" />

        <TextView
            android:id="@+id/search_card_brand"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="0dp"
            android:text="قطع غيار"
            android:textAlignment="center"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            android:textColor="@color/dark_blue" />

    </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
